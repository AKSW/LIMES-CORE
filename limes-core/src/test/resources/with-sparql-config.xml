<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE LIMES SYSTEM "limes.dtd">
<LIMES>
  <PREFIX>
    <NAMESPACE>http://www.w3.org/2002/07/owl#</NAMESPACE>
    <LABEL>owl</LABEL>
  </PREFIX>
  <PREFIX>
    <NAMESPACE>http://dbpedia.org/ontology/</NAMESPACE>
    <LABEL>dbo</LABEL>
  </PREFIX>
  <PREFIX>
    <NAMESPACE>http://dbpedia.org/property/</NAMESPACE>
    <LABEL>dbp</LABEL>
  </PREFIX>
  <PREFIX>
    <NAMESPACE>http://www.w3.org/2001/XMLSchema#</NAMESPACE>
    <LABEL>xsd</LABEL>
  </PREFIX>
  <PREFIX>
    <NAMESPACE>http://xmlns.com/foaf/0.1/</NAMESPACE>
    <LABEL>foaf</LABEL>
  </PREFIX>

  <SOURCE>
    <ID>dbpedia1</ID>
    <ENDPOINT>http://dbpedia.org/sparql</ENDPOINT>
    <VAR>?x</VAR>
    <PAGESIZE>1000</PAGESIZE>
    <RESTRICTION>?x a dbo:City; dbo:populationTotal ?pop; FILTER(?pop > 1000000)</RESTRICTION>
    <PROPERTY>foaf:name AS lowercase</PROPERTY>
    <TYPE>sparql</TYPE>
  </SOURCE>

  <TARGET>
    <ID>dbpedia3</ID>
    <ENDPOINT>http://dbpedia.org/sparql</ENDPOINT>
    <VAR>?y</VAR>
    <PAGESIZE>1000</PAGESIZE>
    <RESTRICTION>?y a dbo:City; dbo:populationTotal ?pop; FILTER(?pop > 1000000)</RESTRICTION>
    <PROPERTY>foaf:name AS lowercase</PROPERTY>
    <TYPE>sparql</TYPE>
  </TARGET>
  <METRIC>doc2vec(x.foaf:name, y.foaf:name)</METRIC>
  <!--
  <METRIC>AND(exactmatch(x.prop:email, y.prop:email)|0.9, mongeelkan(x.prop:name, y.prop:name)|0.07)</METRIC>
  <METRIC>AND(exactmatch(x.prop:email, y.prop:email)|0.9, simple_edit_distance(x.prop:name, y.prop:name)|0.07)</METRIC>
  <METRIC>exactmatch(x.prop:email, y.prop:email)</METRIC>
  <METRIC>levenshtein(x.prop:name, y.prop:name)</METRIC>
  <METRIC>simple_edit_distance(x.prop:name, y.prop:name)</METRIC>
  -->

  <ACCEPTANCE>
    <THRESHOLD>0.7</THRESHOLD>
    <FILE>my-accepted.txt</FILE>
    <RELATION>verySimilar</RELATION>
  </ACCEPTANCE>
  <REVIEW>
    <THRESHOLD>0.01</THRESHOLD>
    <FILE>my-reviewme.txt</FILE>
    <RELATION>quiteSimilar</RELATION>
  </REVIEW>

  <OUTPUT>N3</OUTPUT>
</LIMES>
